package templates

import (
    "soikke.li/moreplease/sites/sql/db"
    "soikke.li/moreplease/sites/sql/highlight"
)

type ServerExample struct {
    Statements  db.Statements
}

templ (e *ServerExample) Run(path string) {
    <div class="sticky-container">
        <div class="tile sticky">
            {{ stmt := highlight.Block(e.Statements.From(path)) }}
            @templ.Raw(stmt)
            <div>
                <pre>
                    { e.Statements.ExecFile(path) }
                </pre>
            </div>
        </div>
    </div>
}

templ (e *ServerExample) Display(path string) {
    <div class="sticky-container">
        <div class="tile sticky">
            {{ stmt := highlight.Block(e.Statements.From(path)) }}
            @templ.Raw(stmt)
        </div>
    </div>
}
