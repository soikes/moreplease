package components

import "soikke.li/moreplease/pkg/model"

type Base struct {
	Title    string
	Language model.Language
}

templ (b *Base) Component(hashedImports templ.Component) {
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8"/>
			<meta name="htmx-config" content='{ "includeIndicatorStyles": false }'/>
			// <meta http-equiv="Content-Security-Policy" content={ web.CSPString(false) }/>
			@hashedImports
			<link rel="icon" type="image/x-icon" href="assets/favicon.ico"/>
			<title>{ b.Title }</title>
		</head>
		<body class={ b.Language.CSSClass() }>
			/* <div id="dark-light">
            <input id="dark-light-toggle" type="checkbox">
            <label for="dark-light-toggle">‚óê</label>
            </div> */
			{ children... }
		</body>
	</html>
}
