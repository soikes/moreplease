package templates

import "fmt"

var jsImports = templ.NewOnceHandle()

type Language int
const (
    LanguageSQL = iota
)

var languages = map[Language]string{
    LanguageSQL: "sql",
}

type Site struct {
    Language Language
}

func (s Site) languageClass() string {
    return fmt.Sprintf("language-%s", languages[s.Language])
}

templ (s Site) Base(title string) {
    <html>
    <head>
        @jsImports.Once() {
            <script type="text/javascript" src="assets/app.js"></script>
            <script defer type="text/javascript" src="assets/alpine.js"></script>
        }
        <link rel="stylesheet" href="assets/styles.css">
        <link rel="stylesheet" href="assets/prism.css">
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
        <title>{ title }</title>
    </head>
    <body class={ s.languageClass() }>
        /* <div id="dark-light">
            <input id="dark-light-toggle" type="checkbox">
            <label for="dark-light-toggle">‚óê</label>
        </div> */
        { children... }
    </body>
    </html>
}
